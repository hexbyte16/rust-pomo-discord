[package]
name = "pomodoro-tui-discord"
version = "1.0.6"
edition = "2021"
authors = ["hexbyte16 islamamara062@@gmail.com"]
description = "Professional Pomodoro TUI with Discord and YouTube BGM support."
license = "MIT"
repository = "https://github.com/hexbyte16/rust-pomo-discord"


exclude = [
    "target/*",
    "bgm/*",
    "screenshots/*",
    "alert.mp3",
    "*.png",
    "*.tar.gz",
    "*.zip",
    ".github/*"
]


[dependencies]
ratatui = "0.26"
crossterm = "0.27"
discord-rich-presence = "0.2"
notify-rust = "4"
rodio = "0.17"
reqwest = { version = "0.11", features = ["blocking"] }


